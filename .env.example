# Security Research Environment Configuration
# Copy this file to .env and configure your environment variables

# Node Environment
NODE_ENV=development

# Application Configuration
APP_NAME=shuffle-airdrop-scam-analysis
APP_VERSION=1.1.0-alpha

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# API Configuration (if needed for blockchain APIs)
# ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
# ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Analysis Configuration
ANALYSIS_OUTPUT_DIR=./analysis-output
REPORT_GENERATION_ENABLED=true

# Security Configuration
ENABLE_SECURITY_WARNINGS=true
REQUIRE_EXPLICIT_CONSENT=true

# Testing Configuration
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80
